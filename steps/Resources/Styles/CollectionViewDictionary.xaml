                    Text="{Binding Name}"
                    TextColor="Black" />
                <Label
                    Grid.Column="2"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Text="{Binding Description}" 
                    TextColor="Black" />
                <Label
                    Grid.Column="3"
                    Background="yellow"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Text="{Binding Rating}"
                    TextColor="Black" />
            </Grid>
        </SwipeView>
    </DataTemplate>
    
    <!--#endregion-->


   

</ResourceDictionary>