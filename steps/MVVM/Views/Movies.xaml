<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:steps.MVVM.ViewModels"
             x:Class="steps.MVVM.Views.Movies"
             Title="Movies">

    <!--<Grid RowDefinitions=".2*,.9*"
          BackgroundColor="AliceBlue">-->

    <Grid 
        x:Name="MainGridofPage"
        RowDefinitions=".2*,.9*">
        <!--BackgroundColor="{Binding Getcolor.BackColor}">-->


    <Grid Grid.Row="0">
            <VerticalStackLayout>
                <SearchBar 
                    Placeholder="Search Movie Name" 
                    PlaceholderColor="Black"
                    FontAttributes="Bold"
                    TextColor="Black"/>
                <Button Text="+"
                        TextColor="White"
                        WidthRequest="50"
                        HorizontalOptions="End"
                        CornerRadius="100"
                        BackgroundColor="DarkBlue"
                        FontAttributes="Bold"
                        Clicked="AddMovie_Clicked"
                        FontSize="Large"/>
            </VerticalStackLayout>
        </Grid>

        <Grid
            x:Name="CollectionViewGrid"
            Grid.Row="1" >

            <CollectionView
                ItemsSource="{Binding movies}"
                SelectionMode="Single"
                SelectedItem="{Binding AddMovie}">
                <CollectionView.EmptyView>
                    <Label Text="No data Found" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem
                                        Text="Delete"
                                        IsVisible="True"
                                        BackgroundColor="DarkRed"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:MoviesViewModel}},Path=DeleteCommand}" />
                                </SwipeItems>
                            </SwipeView.LeftItems>

                            <!--#region For Update Swipe Right -->
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem
                                        Text="Update"                                        
                                        BackgroundColor="Yellow"
                                        Clicked="AddMovie_Clicked" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <!--#endregion-->


                            <Grid 
                                Margin="15,15,20,15"
                                ColumnDefinitions=".2*,.3*,.2*,.2*,.1*">
                                <Frame
                                    Grid.ColumnSpan="5"
                                    BorderColor="DarkBlue"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    WidthRequest="900"
                                    HeightRequest="70" >
                                    <Frame.Background>
                                        <LinearGradientBrush EndPoint="1,0">
                                            <GradientStop Offset="0" Color="#F8F9FA" />
                                            <GradientStop Offset="0" Color="#DEE2E6" />

                                        </LinearGradientBrush>
                                    </Frame.Background>

                                </Frame>


                                <Image 
                                    Grid.Column="0"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Source="{Binding ImageUrl}" />

                                <Label 
                                    Grid.Column="1"
                                    VerticalOptions="Center"
                                    Text="{Binding Name}" 
                                    TextColor="Black"/>
                                <Label 
                                    Grid.Column="2"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Text="{Binding Description}" 
                                    TextColor="Black"/>
                                <Label 
                                    Grid.Column="3"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Text="{Binding Rating}" 
                                    TextColor="Black"/>

                            </Grid>
                        </SwipeView>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>



    </Grid>



</ContentPage>